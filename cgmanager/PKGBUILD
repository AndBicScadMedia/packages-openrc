# Maintainer: artoo <artoo@manjaro.org>

pkgname=cgmanager
pkgver=0.39
pkgrel=0.1
pkgdesc="Another daemon for managing control groups"
arch=('i686' 'x86_64')
url="https://linuxcontainers.org/"
license=('GPL')
depends=('libnih')
makedepends=('help2man' 'git')
options=(!libtool)
source=("$pkgname-$pkgver.tar.gz::https://github.com/lxc/cgmanager/archive/v$pkgver.tar.gz")
md5sums=('80f8e7853c626e7fbb911080e0a9782e')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./bootstrap.sh
	./configure \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--with-pamdir=/usr/lib/security \
		--with-init-script=systemd
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}

